<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#222222"
    android:orientation="vertical"
    tools:context=".view.activity.ArtistDetails">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist Info"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-thin"/>

    <TextView
        android:id="@+id/artistdetails_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Artist Name"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_margin="5dp"
        android:background="#3C3C3C">

        <TextView
            android:id="@+id/artistdetails_tv_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-condensed-light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country (id)"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-condensed-light"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/twitterlogo"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=":"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity=""/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/artistdetails_tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-condensed-light"/>

        </LinearLayout>

        </LinearLayout>

</RelativeLayout>

</LinearLayout>